<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:text="How do you want me to develop your software?"/>

    <TextView
        android:id="@+id/goodText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_heading"
        android:padding="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="56dp"
        android:textColor="@android:color/black"
        android:text="Good"/>
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/good"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_heading"
        android:layout_toLeftOf="@id/goodText"
        android:layout_alignBaseline="@id/goodText"
        android:theme="@style/GoodSwitch"
        android:scaleX="2"
        android:scaleY="2"
        android:padding="16dp"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/cheap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/cheapText"
        android:layout_below="@id/good"
        android:layout_marginTop="50dp"
        android:theme="@style/CheapSwitch"
        android:scaleX="2"
        android:scaleY="2"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/cheapText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cheap"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/goodText"
        android:padding="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Cheap"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fastText"
        android:layout_below="@id/cheap"
        android:layout_marginTop="50dp"
        android:theme="@style/FastSwitch"
        android:scaleX="2"
        android:scaleY="2"
        android:padding="16dp"/>
    <TextView
        android:id="@+id/fastText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/fast"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:text="Fast"/>
</RelativeLayout>